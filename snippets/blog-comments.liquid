<h3>{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h3>
{%- for comment in article.comments -%}
<div class="single-comment-wrap d-flex">
  <figure class="author-thumb">
    {% if section.settings.commentator_image %}
    <img src="{{ section.settings.commentator_image | img_url: '100x100', crop: 'center' }}" alt="{{ section.settings.commentator_image.alt }}">
    {% else %}
    <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 | append: '?s=200' }}" />
    {% endif %}
  </figure>
  <div class="comments-info">
    {{ comment.content }}
    <div class="comment-footer mt-8 d-flex justify-content-between">
      <span class="author"><strong>{{ comment.author }}</strong> - {{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span>
    </div>
  </div>
</div>
{%- endfor -%}