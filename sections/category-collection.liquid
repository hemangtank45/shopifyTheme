<div class="main-collection-list-item section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="main-collection-item main-collection-item--{{ section.settings.text_alignment }}">
      <div class="main-collection-list-wrapper swiper-container wow fadeInUp"
        data-desktop="{{ section.settings.collection-desktop }}" data-large-tablet="{{ section.settings.collection-large-tablet }}" data-tablet="{{ section.settings.collection-tablet }}" 
        data-mobile="{{ section.settings.collection-mobile }}" data-autoplay="{{ section.settings.autoplay-enable }}"
        data-speed="{{ section.settings.speed }}" data-loop="{{ section.settings.loop }}">
        {% if section.settings.show_block_title %}
        <div class="m-40 wow fadeInUp">
          <div class="collection-title-wrapper">
            {% if section.settings.main_subheading != blank %}<div class="theme_main_subheading">{{ section.settings.main_subheading }}</div>{% endif %}
            {% if section.settings.main_heading != blank %}<h2 class="theme_main_heading">{{ section.settings.main_heading }}</h2>{% endif %}
            {% if section.settings.main_paragraph != blank %}<p class="theme_main_description">{{ section.settings.main_paragraph }}</p>{% endif %}
          </div>
        </div>
        {% endif %}
        <div
          class="collection-list swiper-wrapper">
          {% for block in section.blocks %}
          {% if block.type == 'collection' %}
          <div class="main-collection-list swiper-slide" {{ block.shopify_attributes }}>
            <div class="collection-card__image">


                <div class="category_box">
                  
                    <div class="main-collection-title">
                      <div class="main_heading h3">
                        {% if block.settings.main_title != blank %}
                          {{ block.settings.main_title }}
                        {% endif %}
                      </div>
                      <a {% if block.settings.main_link == blank %} role="link" aria-disabled="true" {% else %}
                        href="{{ block.settings.main_link }}" {% endif %} class="collection-name" aria-label="buy product">
                        {{ block.settings.btn_text }}
                      </a>
                    </div>
                  
                  <div class="multi_category_collection">
                    {%- assign featured_collection1 = collections[block.settings.collection1] -%}
                      {%- assign collectionTitle1 = featured_collection1.title | default: 'Collection' -%}
                        <a {% if featured_collection1.url==blank %} role="link" aria-disabled="true" {% else %}
                          href="{{ featured_collection1.url }}" {% endif %} class="collection-name" aria-label="buy product">
                          <div class="first_category_content">
                            <div class="category_img">
                              {%- if block.settings.image1 != blank -%}
                                <div class="media media--transparent ratio" style="--ratio-percent: 73.630%">
                                  {{ block.settings.image1 | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                       
                                </div>
                                {% else %}
                                <div class="media media--transparent ratio" style="--ratio-percent: 73.630%">
                                  {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
                                  {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                </div>
                                {%- endif -%}
                            </div>
                            
                              <div class="collection-name-wrapper">
                                <h3>
                                  {% if block.settings.title1 != blank %}
                                    {{ block.settings.title1 }}
                                    {% else %}
                                    {{ collectionTitle1 }}
                                  {% endif %}
                                </h3>
                              </div>
                          </div>
                        </a>
                      {%- assign featured_collection2 = collections[block.settings.collection2] -%}
