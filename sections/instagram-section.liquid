<div class="main-instagram-post-section section-{{ section.id }}-padding">
  <div class="swiper-container {% if section.settings.container %}page-width{% endif %}">
    <div class="{% if section.settings.enble-slider == true %} main-instagram-post-section-wrapper {% endif %} wow fadeInUp 
      desktop--{{ section.settings.columns_desktop }}-column large_tablet--{{ section.settings.columns_large_tablet }}-column tablet--{{ section.settings.columns_tablet }}-column mobile--{{ section.settings.columns_mobile }}-column"
      data-desktop="{{ section.settings.columns_desktop }}" data-large-tablet="{{ section.settings.columns_large_tablet }}"
      data-tablet="{{ section.settings.columns_tablet }}" data-mobile="{{ section.settings.columns_mobile }}" data-autoplay="{{ section.settings.autoplay-enable }}"
      data-speed="{{ section.settings.speed }}" data-loop="{{ section.settings.loop }}">
      {% if section.settings.show_block_title %}
      <div class="instagram-main-heading instagram-main-heading--{{ section.settings.main_tab_title_alignment }} title_row m-40 wow fadeInUp">
        <div classs="insta_heading_wrapper">
          {% if section.settings.section_subtitle != blank %}<div class="tab_subheading theme_main_subheading">
              {{ section.settings.section_subtitle }}
            </div>{% endif %}
            {% if section.settings.main_heading != blank %}<div class="theme_main_heading h2">{{ section.settings.main_heading }}</div>{% endif %}
            {% if section.settings.section_description != blank %}<p class="collection__description theme_main_description">
              {{ section.settings.section_description }}
            </p>{% endif %}
        </div>
       {% if section.settings.arrows and section.settings.enble-slider == true %}
        <div class="swiper-buttons">
          <div class="content-buttons d-flex">
            <div class="swiper-button-prev">{% render 'icon-left' %}</div>
            <div class="swiper-button-next">{% render 'icon-right' %}</div>
          </div>
        </div>
        {% endif %}
      </div>
    {% endif %}
      <div class="{% if section.settings.enble-slider == true %}  swiper-wrapper {% else %} instagram-main-wrapper {% endif %}">
        {% for block in section.blocks %}
        <div class="{% if section.settings.enble-slider == true %} swiper-slide {% else %} instagram-image-item {% endif %}">
           <a {% if block.settings.insta_link == blank %} role="link" aria-disabled="true" aria-label="Instagram" {% else
