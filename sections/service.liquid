<div class="call-to-action-area" id="section-{{ section.id }}">
  <div class="container container-wide">
    <div class="row">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'service' -%}
      <div class="col-sm-{{ block.settings.service_column_sm }} col-md-{{ block.settings.service_column_md }} col-lg-{{ block.settings.service_column }}">
        <div class="call-to-action-item {% if forloop.first %}mt-0{% endif %}">
          {%- if block.settings.service_image -%}
          <div class="call-to-action-item__icon">
            <img src="{{ block.settings.service_image | img_url: 'small' }}" alt="fast delivery">
          </div>
          {%- endif -%}
          <div class="call-to-action-item__info">
            {%- if block.settings.service_title != '' -%}
            <h3>{{ block.settings.service_title }}</h3>
            {%- endif -%}
            {%- if block.settings.service_content != '' -%}
            {{ block.settings.service_content }}
            {%- endif -%}
          </div>
        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- include 'section-style' -%}

