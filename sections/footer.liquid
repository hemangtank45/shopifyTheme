<footer class="footer-area">
  <div class="footer-widget-area">
    <div class="container container-wide">
      <div class="row mtn-40">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'about' -%}
        <div class="col-sm-{{ block.settings.widget_column_sm }} col-md-{{ block.settings.widget_column_md }} col-lg-{{ block.settings.widget_column }}">
          <div class="widget-item">
            <div class="about-widget">
              {%- capture logo_size -%}{{ block.settings.logo_width | escape }}x{%- endcapture -%}
              {%- if block.settings.logo -%}
              <a href="/" class="theme-logo">
                <img src="{{ block.settings.logo | img_url: logo_size }}" alt="{{ block.settings.logo.alt | default: shop.name }}"
                     {%- if block.settings.ratina_logo_enable -%}
                     srcset="{{ block.settings.logo | img_url: logo_size }} 1x, {{ block.settings.logo | img_url: logo_size, scale: 2 }} 2x"
                     {%- endif -%}>
              </a>
              {%- endif -%}
              {{ block.settings.about_content }}
              
              <div class="footer-social">
              {%- include 'social-midea' -%}
              </div>
            </div>
          </div>
        </div>
		{%- when 'menu' -%}
        <div class="col-sm-{{ block.settings.widget_column_sm }} col-md-{{ block.settings.widget_column_md }} col-lg-{{ block.settings.widget_column }}">
          <div class="widget-item">
            {%- if block.settings.widget_title != '' -%}
            <h4 class="widget-title">{{ block.settings.widget_title }}</h4>
            {%- endif -%}
            <div class="widget-body">
              <ul class="widget-list">
                {%- assign menu = block.settings.menu_handle -%}
                {%- for link in linklists[menu].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
        </div>
		{%- when 'contact' -%}
        <div class="col-sm-{{ block.settings.widget_column_sm }} col-md-{{ block.settings.widget_column_md }} col-lg-{{ block.settings.widget_column }}">
          <div class="widget-item">
            {%- if block.settings.widget_title != '' -%}
            <h4 class="widget-title">{{ block.settings.widget_title }}</h4>
            {%- endif -%}
            <div class="widget-body">
              <address>
                {{ block.settings.address }}
              </address>
            </div>
          </div>
        </div>
        {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
	{%- if section.settings.copy_ritht_text != '' -%}
  <div class="footer-copyright-area">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <div class="copyright-content">
            {{ section.settings.copy_ritht_text }}
          </div>
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
</footer>




