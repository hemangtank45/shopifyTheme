<div class="flash-deals-area {% if section.settings.samall_padding %}home-2{% endif %} bg-img" id="section-{{ section.id }}">
  <div class="container">
    <div class="row align-items-center">
      {%- if section.settings.product_image_enable -%}
      <div class="col-md-5 col-lg-6">
        <div class="flash-deals-thumb text-center text-md-left">
          {%- if section.settings.product_image -%}
          <img src="{{ section.settings.product_image | img_url: 'large' }}" alt="{{ section.settings.product_image.alt }}">
          {%- else -%}
          <img src="https://via.placeholder.com/422x368" alt="{{ section.settings.product_image.alt }}">
          {%- endif -%}
        </div>
      </div>
      {%- endif -%}

      <div class="col-md-7 col-lg-6 text-center">
        <div class="flash-deals-content">
          {%- if section.settings.deal_title != '' -%}
          <h2>{{ section.settings.deal_title }}</h2>
          {%- endif -%}
          {%- if section.settings.deal_sub_title != '' -%}
          <h3>{{ section.settings.deal_sub_title }}</h3>
          {%- endif -%}
          {%- if section.settings.action_title != '' -%}
          <a href="{{ section.settings.action_url }}" class="btn btn-brand">{{ section.settings.action_title }}</a>
		  {%- endif -%}
          {%- if section.settings.deal_date != '' -%}
          <div class="deals-countdown-area">
            <div class="ht-countdown" data-date="{{ section.settings.deal_date }}"></div>
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>




{%- include 'section-style' -%}



