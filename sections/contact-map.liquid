{%- if section.settings.contact_map_enable -%}
<div class="contact-map-wrapper" id="section-{{ section.id }}">
  <div id="map_content" class="h-100" data-lat="{{ section.settings.latitude }}" data-lng="{{ section.settings.longitude }}" data-zoom="7"></div>
</div>

{%- include 'section-style' -%}

{%- endif -%}

