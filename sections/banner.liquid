<div class="banner-area-wrapper" id="section-{{ section.id }}">
  <div class="container container-wide">
    <div class="row">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'banner' -%}
      <div class="col-sm-{{ block.settings.banner_column_sm }} col-md-{{ block.settings.banner_column_md }} col-lg-{{ block.settings.banner_column }}">
        <div class="banner-item">
          <div class="banner-item__img">
            <a href="{{ block.settings.banner_url }}">
              {%- if block.settings.banner_image -%}
              <img src="{{ block.settings.banner_image | img_url: 'master' }}" alt="{{ block.settings.banner_image.alt }}">
              {%- else -%}
              <img src="https://via.placeholder.com/481x335" alt="{{ block.settings.banner_image.alt }}">
              {%- endif -%}
            </a>
          </div>
        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- include 'section-style' -%}

