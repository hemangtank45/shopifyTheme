{{ 'shipping-section.css' | asset_url | stylesheet_tag }}

<div class="shipping_pattern_image {% if section.settings.full_width == false %} page-width {% endif %}">
  <div class="shipping-main-wrapper section-{{ section.id }}-shipping section-{{ section.id }}-padding">
    <div class="{% if section.settings.full_width == true %}page-width{% else %}full_width{% endif %}">
      <div class="Shipping-inner-row swiper-container"
        data-desktop="{{ section.settings.columns_desktop }}" data-large-tablet="{{ section.settings.columns_large_tablet }}"
        data-tablet="{{ section.settings.columns_tablet }}" data-mobile="{{ section.settings.columns_mobile }}" data-autoplay="{{ section.settings.autoplay-enable }}">
        <div class="shipping-trap swiper-wrapper">
          {% for block in section.blocks %}
          {% if block.type == 'shipping' %}
          <div class="shipping-partition ship-{{ block.id }} swiper-slide wow fadeInUp">
            <div class="shipping-flex ship-flex-{{ block.id }}">
              <div class="shipping-content-specification {{ block.settings.shipping_content_alignment }}">
                {% if block.settings.shipping_icon != blank %}
                   <div class="media media--transparent ratio {{ section.settings.image_size }}" style="--ratio-percent: 100%">
                    {{ block.settings.shipping_icon | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                   </div>
                  {% else %}
                   <div class="media media--transparent ratio {{ section.settings.image_size }}" style="--ratio-percent: 100%">
                    {{ 'image' | placeholder_svg_tag }}
                   </div>
                {% endif %}
  
                <div class="shipping-heading-class h3">{{ block.settings.shipping_heading }}</div>
                <p class="shipping-paragraph-class">{{ block.settings.shipping_paragraph }}</p>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
        {% if section.settings.arrows %}
          <div class="swiper-buttons">
            <div class="content-buttons">
              <div class="swiper-button-next">{% render 'icon-right' %}</div>
              <div class="swiper-button-prev">{% render 'icon-left' %}</div>
            </div>
          </div>  
        {% endif %}
        {% if section.settings.dots -%}
          <div class="swiper-pagination shipping-swiper-pagination"
            id="swiper-pagination-{{section.id}}" style="position: inherit;"></div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
                  
{% style %}
  {% for block in section.blocks %}
    {% if block.type == 'shipping' %}
       .ship-flex-{{ block.id }} .shipping-content-specification{
        display: inline-block;
        vertical-align: middle;
        text-align: {{ block.settings.shipping_content_alignment }};
      }
      .ship-flex-{{ block.id }} .shipping-content-specification.center .media{
        margin: 0 auto;
      }
      .ship-flex-{{ block.id }} .shipping-content-specification.right .media{
        margin: 0 0 0 auto;
      }
      .ship-{{ block.id }} .shipping-flex {
        text-align: {{ block.settings.shipping_block_alignment }};
      }
      .ship-flex-{{ block.id }} .shipping-paragraph-class{
        font-style: {{ block.settings.font_style }};
      }
      .shipping-partition.ship-{{ block.id }} {
        margin-top: {{ block.settings.margin_top }}px;
      }
    {% endif %}
  {% endfor %}
  {% if section.settings.full_width == false %}
    .shipping-main-wrapper{
      border-radius: var(--radius_img);
    }
  {% endif %}
  .shipping-content-specification .shipping-heading-class{
    color: {{ section.settings.heading_color }};
    transition: all .5s ease;
  }
  .shipping-content-specification .shipping-paragraph-class{
    color: {{ section.settings.content_color }};
  }
  .shipping-content-specification:hover .shipping-heading-class{
    color: {{ section.settings.theme_hover_color }}
  }
  .shipping-main-wrapper .swiper-button-next,.shipping-main-wrapper .swiper-button-prev{
    background:{{ settings.theme_nav_bg }};
    stroke:{{ settings.theme_nav_icon }};
  }
  .shipping-main-wrapper .swiper-button-next:hover,.shipping-main-wrapper .swiper-button-prev:hover{
    background: {{ settings.theme_nav_hr_bg }}; 
    stroke: {{ settings.theme_nav_hr_icon }}; 
  }
  .shipping-main-wrapper .swiper-pagination-bullet-active{
     background-color: {{ settings.theme_dots_active }} !important;
     transition: all 0.5s ease-in-out;
     opacity: 1 !important;
   }
  .shipping-main-wrapper .swiper-pagination-bullet{
    background-color: {{ settings.theme_dots }};
    transition: all 0.5s ease-in-out;
    opacity: 0.5;
  } 
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    background-color: {{section.settings.section_bg}};
  }
  .shipping_pattern_image{
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  @media screen and (max-width: 1366px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1366 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1366 }}px;
    }
    .shipping_pattern_image{
       margin-top: {{ section.settings.margin-top-1366 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1366 }}px;
    }
  }
  @media screen and (max-width: 1099px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1099 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1099 }}px;
    }
    .shipping_pattern_image{
      margin-top: {{ section.settings.margin-top-1099 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1099 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .shipping-trap {
      row-gap: 30px;
    }
  }
  @media screen and (max-width: 840px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-840 }}px;
      padding-bottom: {{ section.settings.padding-bottom-840 }}px;
    }
    .shipping_pattern_image{
       margin-top: {{ section.settings.margin-top-840 }}px;
      margin-bottom: {{ section.settings.margin-bottom-840 }}px;
    }
  }
  @media screen and (max-width: 640px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-640 }}px;
      padding-bottom: {{ section.settings.padding-bottom-640 }}px;
    }
    .shipping_pattern_image{
      margin-top: {{ section.settings.margin-top-640 }}px;
      margin-bottom: {{ section.settings.margin-bottom-640 }}px;  
    }
  }
  @media screen and (max-width: 480px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-480 }}px;
      padding-bottom: {{ section.settings.padding-bottom-480 }}px;
    }
    .shipping_pattern_image{
       margin-top: {{ section.settings.margin-top-480 }}px;
      margin-bottom: {{ section.settings.margin-bottom-480 }}px;
    }
    .shipping-trap {
      row-gap: 15px;
    }
  }
{% endstyle %}

