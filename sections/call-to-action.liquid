{%- if section.settings.show_call_to_action -%}
<div class="call-to-action-area" id="section-{{ section.id }}">
  <div class="call-to-action-content-area bg-img {% if section.settings.samall_padding %}home-2{% endif %}" {% if section.settings.action_bg_image %}data-bg="{{ section.settings.action_bg_image | img_url: 'master' }}"{% endif %}>
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <div class="call-to-action-txt">
            {%- if section.settings.title != '' -%}
            <h2>{{ section.settings.title }}</h2>
            {%- endif -%}
            {%- if section.settings.action_title != '' -%}
            <a href="{{ section.settings.action_url }}" class="btn btn-brand">{{ section.settings.action_title }}</a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
  {%- if section.settings.action_image -%}
  <div class="call-to-action-image-area">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <img src="{{ section.settings.action_image | img_url: 'master' }}" alt="Car" />
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
</div>

{%- include 'section-style' -%}
{%- endif -%}


