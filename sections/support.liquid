{%- if section.settings.show_support -%}
<div class="need-help-area bg-img" id="section-{{ section.id }}">
  <div class="container container-wide">
    <div class="row align-items-center">
      <div class="col-sm-7 text-center text-sm-left">
        <div class="need-help-content mb-sm-20">
          {%- if section.settings.title != '' -%}
          <h3>{{ section.settings.title }}</h3>
          {%- endif -%}
          {%- if section.settings.content != '' -%}
          {{ section.settings.content }}
          {%- endif -%}
        </div>
      </div>
      {%- if section.settings.action_title != '' -%}
      <div class="col-sm-5 text-center text-sm-right">
        <a href="{{ section.settings.action_url }}" class="btn btn-brand">{{ section.settings.action_title }}</a>
      </div>
      {%- endif -%}
    </div>
  </div>
</div>

{%- include 'section-style' -%}
{%- endif -%}


