<div class="faq-page" id="section-{{ section.id }}">
  <div class="container container-wide">
    {%- if section.settings.section_title != '' -%}
    <div class="row">
      <div class="col-lg-5 m-auto text-center">
        <div class="section-title">
          <h2 class="h3">{{ section.settings.section_title }}</h2>
          {%- if section.settings.section_sub_title != '' -%}
          <p>{{ section.settings.section_sub_title }}</p>
          {%- endif -%}
        </div>
      </div>
    </div>
    {%- endif -%}
    <div id="accordion">
      {%- assign i = 1 -%}
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'faq' -%}
      <div class="card">
        <div class="card-header" id="heading-{{ i }}">
          <h5 class="mb-0">
            <button class="btn-link {% unless forloop.first %}collapsed{% endunless %}" data-toggle="collapse" data-target="#collapse-{{ i }}" aria-expanded="true" aria-controls="collapse-{{ i }}">
              {{ block.settings.accordion_title }}
            </button>
          </h5>
        </div>
        <div id="collapse-{{ i }}" class="collapse {% if forloop.first %}show{% endif %}" aria-labelledby="heading-{{ i }}" data-parent="#accordion">
          <div class="card-body">
            {{ block.settings.accordion_content }}
          </div>
        </div>
      </div>
      {%- assign i = i | plus: 1 -%}
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- include 'section-style' -%}


